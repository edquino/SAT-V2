<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Actualizar Tipo de Alerta</h4>
                <form class="m-t-40" novalidate action="/api-sat/alert-type/{{alertType.id_tipo_alerta}}/update"
                    method="POST">
                    <section>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <h5>T&iacute;tulo Alerta</h5>
                                    <div class="controls">
                                        <input type="text" name="nombre_alerta" class="form-control"
                                            value="{{alertType.nombre_alerta}}">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <h5>Estado</h5>
                                    <div class="controls">
                                        <select name="estado" id="estado_alert" required data-validation-required-message="Este campo es obligatorio" class="select2 form-control">
                                            <option value="1">Activo</option>
                                            <option value="0">Inactivo</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="text-xs-right">
                            <button type="submit" class="btn btn-info">Actualizar</button>
                            <a href="/api-sat/alert-type-list" type="reset" class="btn btn-inverse">Cancelar</a>
                        </div>
                    </section>
                </form>
            </div>
        </div>
    </div>
</div>