<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Actualizar Acci&oacute;n PDDH</h4>
                <form class="m-t-40" novalidate action="/api-sat/actions-pddh/{{actionPDDH.id_accion_pddh}}/update" method="POST">
                    <section>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <h5>T&iacute;tulo Acci&oacute;n<span class="text-danger">*</span></h5>
                                    <div class="controls">
                                        <input type="text" name="nombre_accion" class="form-control" required
                                            data-validation-required-message="Este campo es obligatorio" value="{{actionPDDH.nombre_accion}}">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <h5>Estado</h5>
                                    <div class="controls">
                                        <select name="estado" id="estado_accines" class=" select2 form-control"  required data-validation-required-message="Este campo es obligatorio">
                                            <option value="{{actionPDDH.estado}}">{{#stateDetails
                                                actionPDDH.estado}}{{/stateDetails}}</option>
                                            <option value="1">Activo</option>
                                            <option value="0">Inactivo</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="text-xs-right">
                            <button type="submit" class="btn btn-info">Actualizar</button>
                            <a href="/api-sat/actions-pddh-list" type="reset" class="btn btn-inverse">Cancelar</a>
                        </div>
                    </section>
                </form>
            </div>
        </div>
    </div>
</div>