<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Crear Subtema</h4>
                {{!-- <h6 class="card-subtitle">Bootstrap Form Validation check the --}}
                    {{!-- <a href="http://reactiveraven.github.io/jqBootstrapValidation/">official website </a></h6>
                --}}
                <form class="m-t-40" novalidate action="/api-sat/subtopic/{{subtopic.id_subtema}}/update" method="POST">
                    <section>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <h5>T&iacute;tulo Subtema<span class="text-danger">*</span></h5>
                                    <div class="controls">
                                        <input type="text" name="nombre_subtema" class="form-control"
                                            value="{{subtopic.nombre_subtema}}" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <h5>Temas</h5>
                                    <div class="controls">
                                        <select name="id_tema" id="id_tema" class="select2 form-control" required
                                            data-validation-required-message="Este campo es obligatorio">
                                            <option value="{{subtopic.id_tema}}">{{subtopic.nombre_tema}}</option>
                                            {{#each topic}}
                                            <option value="{{id_tema}}">{{nombre_tema}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <h5>Estado</h5>
                                    <div class="controls">
                                        <select name="estado" id="estado_subtema" class="select2 form-control" required
                                            data-validation-required-message="Este campo es obligatorio">
                                            <option value="1">Activo</option>
                                            <option value="0">Inactivo</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="text-xs-right">
                            <button type="submit" class="btn btn-info">Guardar</button>
                            <a href="/api-sat/subtopic-list" type="reset" class="btn btn-inverse">Cancelar</a>
                        </div>
                    </section>
                </form>
            </div>
        </div>
    </div>
</div>