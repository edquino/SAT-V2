<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Actualizar zona</h4>
                <form class="m-t-40" novalidate action="/api-sat/zona/{{zone.id_zona}}/edit"
                    method="POST">
                    <section>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <h5> T&iacute;tulo Zona</h5>
                                    <div class="controls">
                                        <input type="text" name="nombre_zona" class="form-control"
                                            value="{{zone.nombre_zona}}">
                                    </div>
                                    {{!-- <div class="controls">
                                        <input type="text" name="nombre_fuente" class="form-control" required
                                            data-validation-required-message="This field is required">
                                    </div> --}}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <h5>Estado</h5>
                                    <div class="controls">
                                        <select name="estado" id="select" required class="form-control">
                                            <option value="1">Activo</option>
                                            <option value="0">Inactivo</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="text-xs-right">
                            <button type="submit" class="btn btn-info">Actualizar</button>
                            <a href="/api-sat/zone-list" type="reset" class="btn btn-inverse">Cancelar</a>
                        </div>
                    </section>
                </form>
            </div>
        </div>
    </div>
</div>