<div class="row">
    <div class="col-12">
        <!-- table responsive -->
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Roles</h4>
                <h6 class="card-subtitle">Cat&aacute;logo - Roles</h6>
                <div class="table-responsive m-t-40">
                    <table id="config-table" class="table display table-bordered table-striped no-wrap">
                        <thead>
                            <tr>
                                <th>Titulo</th>
                                <th>Estado</th>
                                <th>Modificar</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each rolesLList}}
                            <tr>
                                <td>{{nombre_permiso}}</td>
                                <td>{{#stateDetails estado}}{{/stateDetails}}</td>
                                <td>
                                    <a href="/api-sat/roles/{{id_rol_permisos}}/view-update"
                                        class="btn btn-secondary" aria-pressed="false">
                                        <i class="ti-pencil text" aria-hidden="true"></i>
                                        <i class="ti-pencil-alt text-active" aria-hidden="true"></i>
                                    </a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
