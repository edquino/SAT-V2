{{#if warning}}
    <div class="alert alert-warning text-center" style="margin: 0; width: 40%; position:absolute; top:2%; left:50%; margin-right:50%; transform: translate(-50%, -50%);"> <i class="ti-user"></i> {{warning}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span
                aria-hidden="true">&times;</span>
        </button>
    </div>
{{/if}}

{{#if delete}}
<div class="alert alert-danger text-center" style="margin: 0; width: 40%; position:absolute; top:2%; left:50%; margin-right:50%; transform: translate(-50%, -50%);"> <i class="ti-user"></i> {{delete}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">&times;</span>
    </button>
</div>
{{/if}}

{{#if success}}
<div class="alert alert-success text-center" style="margin: 0; width: 40%; position:absolute; top:2%; left:50%; margin-right:50%; transform: translate(-50%, -50%);"> <i class="ti-user"></i> {{success}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">&times;</span>
    </button>
</div>
{{/if}}
